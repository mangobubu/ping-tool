{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ping Tool",
  "version": "0.1.0",
  "identifier": "com.example.pingtool",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Ping Tool",
        "width": 920,
        "height": 1200,
        "minWidth": 720,
        "minHeight": 640,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": false,
    "icon": ["icons/icon.png"]
  }
}
